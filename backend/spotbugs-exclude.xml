<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Suppress EI_EXPOSE_REP2 for Spring-managed beans -->
    <!-- Spring DI ensures these dependencies are immutable within the application context -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Suppress EI_EXPOSE_REP for DTOs and response objects -->
    <!-- These are controlled by the application and not exposed to untrusted external code -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>

    <!-- Exclude OpenAPI generated code -->
    <Match>
        <Class name="~com\.sandbox\.api\.presentation\.generated\..*"/>
    </Match>

    <!-- Suppress CT_CONSTRUCTOR_THROW for JwtTokenProvider -->
    <!-- Spring manages the lifecycle and the constructor parameters are validated -->
    <Match>
        <Class name="com.sandbox.api.infrastructure.security.JwtTokenProvider"/>
        <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Match>
</FindBugsFilter>
